<% content_for :head do %>
<style>
  body, div {
    margin: 0;
    padding: 0;
  }

  body {
  }
</style>
<% end %>

<div style="margin-left: 5em; margin-right: 5em;">

  <div style="margin-top: 1em; font-size: 1.2em;">
    You are eligible (so far) to take this survey!
    Please read the following information below. 
  </div>

  <div style="margin-top: 1em; margin-bottom: 1em;">
    <iframe src="<%= url_for(:action => "info_letter_content") %>" 
            style="width: 100%; height: 300px;"></iframe>
  </div>

  <div style="width: 100%;">
    <span style="float: left;">
<%= form_tag url_for(:controller => 'surveyor', :action => 'create'), :id => 'create_survey_form' do %>
    <%= hidden_field_tag "survey_code", "rit-quality-of-life-survey" %>
    <img id="loading" src="/loading_wh.gif" style="z-index:5;position: relative;top: -300px;left: 341px;height: 250px;display:none" />

    <div id="error_bar" class="field_with_errors" style="display: none;">Please enter a valid RIT email address</div>
    <div id="facebook_login_button" style="margin-top: 1em;">
 <%= email_field(:user, :address, :value => "Enter your RIT email
 address", :id => "email") %> 
      <fb:login-button 
        show-faces="false"
        scope="user_relationships,user_relationship_details"
        onlogin="facebook_li();">
        Login with Facebook
      </fb:login-button>
    <-- Click here to login with Facebook IF you AGREE to participate.
    </div>
  <% end %>
<p>
       <%= link_to " (Why do we need Facebook?)", root_url +  "consent/facebook_login?commit=I+Agree" %>
<br/>
or <br/>
    <%= link_to "I do not wish to participate", root_url +
	"consent/did_not_consent?commit=Cancel" %>
</p>

   </span>

    <span style="float: right;">
      <%= link_to "Download a Copy of this Letter", root_url + "info_letter.pdf" %>
    </span>
  </div>

  <div style="clear: both;">

</div>

<script>


          //Get a reference to the link on the page
          // with an id of "mylink"
          var a = document.getElementById("email");
          a.color = "#888";
          //Set code to run when the link is clicked
          // by assigning a function to "onclick"
          a.onclick = function() {

            var b = document.getElementById("error_bar");
            b.style.display = 'none';
            if (this.value == "Enter your RIT email address") {
               // Your code here...
               this.value = "";
            }
            this.color = "black";

         }

         var facebook_li = function () {
            var a = document.getElementById("email");
            //var re = /[a-z0-9!#$%&'*+\/=?^_`{|}~-]+(?:\.[a-z0-9!#$%&'*+\/=?^_`{|}~-]+)*@(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?/;
            var re = /[a-z0-9!#$%&'*+\/=?^_`{|}~-]+(?:\.[a-z0-9!#$%&'*+\/=?^_`{|}~-]+)*@(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\.)*(rit.edu)$/;

            if (re.test(a.value)) {

              $('#loading').show();
              $('#create_survey_form').submit();
            }
            else {
              var b = document.getElementById("error_bar");
              b.style.display = 'block';
            }
         }

</script>
